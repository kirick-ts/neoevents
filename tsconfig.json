{
	"compileOnSave": false,
	"include": [
		"src/"
	],
	"exclude": [
		"dist/",
		"node_modules/",
		"test/",
		"**/*.test.*",
		"**/*.test-d.ts"
	],
	"compilerOptions": {
		"declaration": true,
		"isolatedDeclarations": true,
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"DOM",
			"ESNext",
			"ES2021.String"
		],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"removeComments": false
	}
}
